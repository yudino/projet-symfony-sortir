{% extends 'base.html.twig' %}

{% block title %}Afficher profil{% endblock %}

{% block body %}

    <div class="col-sm-6 offset-sm-3">
        <h2 class="text-center my-3"> {{ user.pseudo }}</h2>
        <table class="table table-light table-hover">
            <tr>
                <th>Nom : </th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom : </th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone : </th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Email : </th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Campus : </th>
                <td>{{ user.campus.nomCampus | default('non défini') }}</td>
            </tr>
        </table>
    </div>
    <div class="col-4 offset-4">
        <a href="{{ path ("home") }}" class="btn btn-info btn-lg btn-block my-4">Retour</a>
    </div>


{% endblock %}